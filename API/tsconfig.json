{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "es2016",                                  
    "module": "commonjs",                                                              
    "moduleResolution": "node10",                     
    "rootDir": "src",                                   
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],                                 
    "outDir": "./dist",                                 
    "removeComments": true,                           
    "esModuleInterop": true,                   
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                   
    "skipLibCheck": true                             
  }
}
